<Window x:Class="otoface.BoneInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OtoFace" Height="200" Width="159">
    <StackPanel Margin="10">
        <TextBlock Text="ボーン名:" Width="111"/>
        <TextBox x:Name="txtBoneName" Width="112"/>
        <TextBlock Text="値:" Width="111"/>
        <TextBox x:Name="txtValue" Margin="0,0,0,0" Width="112"/>
        <TextBlock Text="パーツ（任意）" Width="111"/>
        <TextBox x:Name="txtParts" Margin="0,0,0,10" Width="112"/>
        <Button Content="OK" Click="OkButton_Click" Width="111"/>
    </StackPanel>
</Window>
